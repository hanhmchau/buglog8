<div id='logsearch' class='app none' tabindex='-1'>
	<div class='search-container'>
		<input id='search-input' placeholder='Search...' class='js-search' type='text' />
		<button class='search-button'><i class='fa fa-search'></i></button>
		<button class='close-button none'><i class='fa fa-times-circle'></i></button>
	</div>

	<div class='controls none'>
		<div class='result-count'></div>
		<div class='sort'>
			<button class='selected' data-sort='newest'>Newest</button>
			<button data-sort='oldest'>Oldest</button>
		</div>
	</div>

	<div class='results bugvolution-chat-log' id='chat-results'>
		<div class='results-container'></div>
		<div class='pagination'>
			<button class='paginator prev'><i class='fas fa-angle-left'></i></button>
			<div class='page-info'>Page <span class='current-page'></span> of <span class='total-page'></span></div>
			<button class='paginator next'><i class='fas fa-angle-right'></i></button>
		</div>
	</div>
</div>